# applications
super + b
  xdo activate -N Brave-browser || brave
super + p
  chromium --incognito
super + f
  ~/.scripts/search_dmenu
super + s
  ~/.scripts/ssh_dmenu
super + t
  xdo activate -N thunderbird || thunderbird
super + v
  ~/.scripts/virtualbox_dmenu
super + r
  ~/.scripts/remmina_dmenu
super + l
  xdo activate -N slack || slack
super + k
  xdo activate -N skypeforlinux || skypeforlinux
super + c
  xdo activate -N URxvt || urxvtc
super + n
  ~/.scripts/rss
super + d
  xdo activate -N DBeaver || dbeaver
super + Print
  rmd-helper
super + m
  ~/.scripts/man_dmenu
super + i
  xdo activate -N LBRY || lbry
alt + F10
  bash ~/.scripts/toggle_audio_output
alt + F11
  pactl -- set-sink-volume "$(pactl list short sinks | grep $(pactl get-default-sink) | cut -d$'\t' -f 1)" -5% \
    && pkill -RTMIN+3 dwmblocks
alt + F12
  pactl -- set-sink-volume "$(pactl list short sinks | grep $(pactl get-default-sink) | cut -d$'\t' -f 1)" +5% \
    && pkill -RTMIN+3 dwmblocks
ctrl + super + l
  xdotool mousemove_relative -- 20 0
ctrl + super + h
  xdotool mousemove_relative -- -20 0
ctrl + super + j
  xdotool mousemove_relative -- 0 20
ctrl + super + k
  xdotool mousemove_relative -- 0 -20
ctrl + super + space
  xdotool click 1
ctrl + super + m
  xdotool click 3
super + alt + j
  xdotool click 5
super + alt + k
  xdotool click 4
