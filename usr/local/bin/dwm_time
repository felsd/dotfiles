#!/bin/bash

print_center(){
    local x
    local y
    text="$*"
    x=$(( ($(tput cols) - ${#text}) / 2))
    echo -ne "\E[6n";read -sdR y; y=$(echo -ne "${y#*[}" | cut -d';' -f1)
    echo -ne "\033[${y};${x}f$*"
}

if [ $BLOCK_BUTTON ]; then
    urxvtc -T floatingwin -geometry 50x10-10+29 -background "[90]#000000" -e /bin/bash -c timezones
fi

TIME_ICON_SJ="\ue017"
printf "$TIME_ICON_SJ$(date +'%H:%M') "
